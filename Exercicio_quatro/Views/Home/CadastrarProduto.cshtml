@model AppQuarta.Models.Produto
@{
    ViewData["Title"] = "CadastrarProduto";
}

<h1>Cadastrar Produto</h1>

<form action="" method="post">

    <hr />

    <div class="form-group">
        <label class="control-label" asp-for="Cod_Produto"></label>
        <span asp-validation-for="Cod_Produto" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="Cod_Produto" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Nome"></label>
        <span asp-validation-for="Nome" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="Nome" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Validade"></label>
        <span asp-validation-for="Validade" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="Validade" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Obs"></label>
        <span asp-validation-for="Obs" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="Obs" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Estoque"></label>
        <span asp-validation-for="Estoque" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="Estoque" />
        </div>
    </div>
    <br />
    <div class="col-md-offset-2 col-10">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
        <a class="btn btn-secondary" href="~/Home/Index">Cancelar</a>
    </div>

</form>