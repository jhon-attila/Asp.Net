@model AppQuarta.Models.Pessoa
@{
    ViewData["Title"] = "CadastrarPessoa";
}

<h2>Cadastrar Pessoa</h2>

<form action="" method="post">

    <hr />

    <div class="form-group">
        <label class="control-label" asp-for="Codigo"></label>
        <span asp-validation-for="Codigo" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="Codigo" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="NomePessoa"></label>
        <span asp-validation-for="NomePessoa" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="NomePessoa" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="login"></label>
        <span asp-validation-for="login" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="login" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Obs"></label>
        <span asp-validation-for="Obs" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="Obs" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="Email" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Senha"></label>
        <span asp-validation-for="Senha" class="text-danger"></span>
        <div class="col-10">
            <input type="password" class="control-label" asp-for="Senha" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="ConfirmaSenha"></label>
        <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
        <div class="col-10">
            <input type="password" class="control-label" asp-for="ConfirmaSenha" />
        </div>
    </div>
    <br />
    <div class="col-md-offset-2 col-10">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
        <a class="btn btn-secondary" href="~/Home/Index">Cancelar</a>
    </div>

</form>